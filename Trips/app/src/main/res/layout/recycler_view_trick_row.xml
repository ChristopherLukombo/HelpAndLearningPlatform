<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@null"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="8dp">


    <LinearLayout
        android:id="@+id/trickRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@null"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/rowTrickTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="14sp"
                android:text="Apprendre l'anglais"
                android:textStyle="bold"
                android:fontFamily="serif"/>

            <RatingBar
                android:id="@+id/trickListRatingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:isIndicator="true"
                android:stepSize="0.1"/>

            <TextView
                android:id="@+id/rowTrickCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="10sp"
                android:text="Langues"
                android:textStyle="italic"
                android:gravity="end"
                android:fontFamily="serif"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/rowTrickDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:text="Un petit guide pour vous aider Ã  apprendre l'anglais plus facilement."
            android:fontFamily="serif"
            android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/subscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:background="@color/TripsAquaBlue"
                android:fontFamily="serif"
                android:text="Suivre"
                android:textSize="10dp" />



    </LinearLayout>

</android.support.v7.widget.CardView>